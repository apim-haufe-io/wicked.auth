mixin flashMessage(type, message)
    if type == 'error'
        div(role='alert').alert.alert-danger
            span(aria-hidden="true").fas.fa-exclamation-circle
            span.sr-only Error:
            | &nbsp; #{message}
    else if type == 'warning'
        div(role='alert').alert.alert-warning
            span(aria-hidden="true").fas.fa-exclamation-triangle
            span.sr-only Warning:
            | &nbsp; #{message}
    else
        div(role='alert').alert.alert-success
            span(aria-hidden="true").far.fa-check-square
            span.sr-only Success:
            | &nbsp; #{message}
    
